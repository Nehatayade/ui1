    <ImageView
        android:id="@+id/imageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="49dp"
        app:srcCompat="@drawable/ic_insert_photo_black_24dp" />



</RelativeLayout>
